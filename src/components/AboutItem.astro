---
import CustomIcon from '@components/CustomIcon.astro';

interface Props {
  icon: string;
  title: string;
  description: string;
}

const { icon, title, description } = Astro.props;
---

<span
  class='flex flex-col justify-center items-center gap-2 bg-gray-50 p-4 rounded-2xl hover:scale-110 transition-all duration-300'
>
  <CustomIcon name={icon} size='size-10' color='text-green-700' />
  <p class='text-xl font-medium'>{title}</p>
  <p class='text-gray-700 font-light'>
    {description}
  </p>
</span>
