---
import CustomIcon from './CustomIcon.astro';

interface ContactItem {
  icon: string;
  title: string;
  subtitle: string;
  description: string;
}

const contactItems: ContactItem[] = [
  {
    icon: 'email',
    title: 'Email',
    subtitle: 'hola@bonsai-software.com',
    description: 'Respuesta en 24 horas',
  },
  {
    icon: 'chat',
    title: 'Chat en vivo',
    subtitle: 'Disponible ahora',
    description: 'Respuesta inmediata',
  },
  {
    icon: 'location',
    title: 'Ubicación',
    subtitle: '100% Digital',
    description: 'Trabajamos globalmente',
  },
  {
    icon: 'time',
    title: 'Horario',
    subtitle: '24/7 Disponible',
    description: 'Siempre conectado',
  },
];
---

<section
  id='contact'
  class='flex flex-col items-center justify-center text-center p-4 gap-4 mt-24'
>
  <div>
    <h1 class='text-4xl font-bold text-center mb-4'>
      Hablemos de tu <span class='text-green-700'>Proyecto</span>
    </h1>
    <p class='text-xl font-medium text-gray-500 text-center mb-4'>
      ¿Tienes una idea? Nosotros la convertimos en realidad. Contacta con
      nuestro equipo y comencemos a trabajar juntos.
    </p>
    <form class='flex flex-col min-w-8/12 gap-4 mt-16'>
      <div class='bg-gray-50 p-4 rounded-2xl'>
        <span class='flex flex-row items-start justify-start gap-4 w-full'>
          <h2 class='text-2xl font-medium text-gray-700 mb-4'>
            Envíanos un mensaje
          </h2>
        </span>
        <div class='flex flex-row gap-4 w-full'>
          <div class='flex flex-col gap-1 text-start w-full'>
            <label for='name'>Nombre *</label>
            <input
              class='w-full rounded-md px-2 py-2 border-2 border-gray-400 focus:border-green-700 bg-gray-100 focus:outline-hidden hover:border-green-700'
              type='text'
              id='name'
              name='name'
              required
            />
          </div>
          <div class='flex flex-col gap-1 text-start w-full'>
            <label for='email'>Email *</label>
            <input
              class='w-full rounded-md px-2 py-2 border-2 border-gray-400 focus:border-green-700 bg-gray-100 focus:outline-hidden hover:border-green-700'
              type='email'
              id='email'
              name='email'
              required
            />
          </div>
        </div>
        <div class='flex flex-row gap-1 text-start w-full mt-4'>
          <div class='flex flex-col gap-4 w-full'>
            <label for='company'>Empresa</label>
            <input
              class='w-full rounded-md px-2 py-2 border-2 border-gray-400 focus:border-green-700 bg-gray-100 focus:outline-hidden hover:border-green-700'
              type='text'
              id='company'
              name='company'
            />
          </div>
        </div>
        <div class='flex flex-row gap-1 text-start w-full mt-4'>
          <div class='flex flex-col gap-4 w-full'>
            <label for='message'>Mensaje *</label>
            <textarea
              class='w-full h-32 rounded-md px-2 py-2 border-2 border-gray-400 focus:border-green-700 bg-gray-100 focus:outline-hidden hover:border-green-700'
              id='message'
              name='message'
              required></textarea>
          </div>
        </div>
        <button
          class='flex flex-row items-center justify-center gap-2 w-full h-10 mt-4 bg-green-700 text-white rounded-xl'
          type='submit'
        >
          <span>Enviar Mensaje</span>
          <CustomIcon name='send' size='size-6' color='text-white' />
        </button>
      </div>
    </form>
    <div
      class='flex flex-col min-w-8/12 items-start text-start p-4 gap-4 mt-4 border-2 border-gray-50 bg-gray-50 rounded-xl'
    >
      <h2 class='text-2xl font-medium text-gray-700 mb-4'>
        Información de contacto
      </h2>
      {
        contactItems.map((item) => {
          return (
            <span class='flex flex-row gap-4 w-full mb-4'>
              <div class='size-12 bg-green-700 rounded-2xl flex justify-center items-center mb-2'>
                <CustomIcon name={item.icon} size='size-8' color='text-white' />
              </div>
              <div class='flex flex-col gap-1'>
                <p>{item.title}</p>
                <p class='text-green-700'>{item.subtitle}</p>
                <p class='text-gray-500'>{item.description}</p>
              </div>
            </span>
          );
        })
      }
    </div>
    <div
      class='flex flex-col min-w-8/12 items-center text-center p-4 gap-4 mt-4 border-2 border-gray-50 bg-gray-50 rounded-xl'
    >
      <h2 class='text-2xl font-medium text-green-700 mt-4 text-center'>
        ¿Listo para empezar?
      </h2>
      <p class='text-gray-700 text-center mb-4'>
        Transformemos tu idea en una solución digital exitosa
      </p>
      <a
        href='#contact'
        class='flex flex-row items-center justify-center gap-2 w-auto h-10 md:w-2/3 lg:w-1/3 rounded-full bg-green-700 text-white p-4'
        >Solicitar Cotización</a
      >
    </div>
  </div>
</section>
<script>
  import {neon} from '@netlify/neon';
  const formButton = document.querySelector('#contact form button');
  formButton?.addEventListener('click', async(event) => {
    event.preventDefault();
    const sql = neon()
    const name = (document.querySelector('input[name="name"]') as HTMLInputElement).value;
    const email = (document.querySelector('input[name="email"]') as HTMLInputElement).value;
    const company = (document.querySelector('input[name="company"]') as HTMLInputElement).value;
    const message = (document.querySelector('textarea[name="message"]') as HTMLInputElement).value;
    await sql`INSERT INTO clients (name, email, company, message) VALUES (${name}, ${email}, ${company}, ${message})`;
  });
</script>
